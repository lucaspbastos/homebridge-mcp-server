{
  "name": "homebridge-mcp-server",
  "version": "0.0.1",
  "type": "module",
  "description": "Model Context Protocol server for Homebridge integration",
  "main": "./build/index.js",
  "bin": {
    "homebridge-mcp-server": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "start": "node ./build/index.js",
    "dev": "tsc --watch",
    "test": "node --import tsx --test src/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch src/**/*.test.ts",
    "test:coverage": "node --import tsx --experimental-test-coverage --test src/**/*.test.ts",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "homebridge",
    "mcp",
    "model-context-protocol",
    "smart-home"
  ],
  "author": "Lucas Bastos",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucaspbastos/homebridge-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/lucaspbastos/homebridge-mcp-server/issues"
  },
  "homepage": "https://github.com/lucaspbastos/homebridge-mcp-server#readme",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "zod": "3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
